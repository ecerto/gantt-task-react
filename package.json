{
  "name": "@nikmaxott/gantt-task-react",
  "version": "0.5.0",
  "description": "Interactive Gantt Chart for React with TypeScript.",
  "author": "MaTeMaTuK <maksym.vikarii@gmail.com>, nikmaxott <nikolaus@nikmaxott.org>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nikmaxott/gantt-task-react.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.tsx",
  "engines": {
    "node": ">=10"
  },
  "keywords": [
    "react",
    "gantt",
    "typescript",
    "chart",
    "svg",
    "gantt-chart",
    "gantt chart",
    "react-gantt",
    "task"
  ],
  "scripts": {
    "build": "microbundle --jsx React.createElement --tsconfig ./tsconfig.json --compress",
    "start": "microbundle watch --jsx React.createElement --tsconfig ./tsconfig.json --compress",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build",
    "test:build": "run-s build",
    "test:lint": "eslint --ext .tsx src/**/*",
    "test:unit": "vitest run",
    "test:watch": "vitest --watch",
    "predeploy": "cd example && npm install && npm run build",
    "deploy": "gh-pages -d example/dist"
  },
  "peerDependencies": {
    "react": "^18.3.0",
    "react-dom": "^18.3.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.10",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@vitejs/plugin-react": "^4.3.1",
    "@vitejs/plugin-react-refresh": "^1.3.6",
    "gh-pages": "^6.1.0",
    "microbundle": "^0.15.1",
    "npm-run-all": "^4.1.5",
    "postcss-flexbugs-fixes": "^5.0.2",
    "postcss-normalize": "^10.0.1",
    "postcss-preset-env": "^9.6.0",
    "prettier": "^3.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "^4.9.5",
    "vite": "^5.3.5",
    "vitest": "^2.0.4"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "bugs": {
    "url": "https://github.com/nikmaxott/gantt-chart/issues"
  },
  "homepage": "https://github.com/nikmaxott/gantt-chart#readme",
  "directories": {
    "example": "example"
  }
}
